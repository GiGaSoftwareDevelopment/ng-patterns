{
  "$schema": "http://json-schema.org/schema",
  "$id": "capacitor",
  "title": "",
  "type": "object",
  "properties": {
    "appName": {
      "type": "string",
      "description": "App Name of capacitor app.",
      "default": "appName"
    },
    "domain": {
      "type": "string",
      "description": "Domain with capacitor app belongs to.",
      "default": "domain"
    },
    "webAppUrl": {
      "type": "string",
      "description": "What is the url of the web app?",
      "default": "https://www.example.com"
    },
    "appId": {
      "type": "string",
      "description": "App Store or Play Store ID",
      "default": "com.example.www"
    }
  },
  "required": ["appName", "domain"]
}
